header.header
        nav.nav.nav--tours 
            a.nav__el(href="/") All tours 
            form.nav_search 
                button.nav__search-btn
                    svg 
                        use(xlink:href="/img/icons.svg#icon-search")
                input.nav__search-input(type="text" placeholder="Search Tours")

            div.header__logo    
                img(src="/img/logo-white.png" alt="Natours logo")
        nav.nav.nav--user 
            if user
                a.nav__el(href="/account")
                    img.nav__user-img(src=`img/users/${user.photo}`  alt="User photo")
                    span= user.name
                button.nav__el.logout LOG OUT
            else        
                button.nav__el(href="/login") Login In 
                button.nav__el.nav__el--cta Sign In
